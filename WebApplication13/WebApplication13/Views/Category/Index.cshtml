@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<WebApplication13.Models.Category>
<br />
<br />
<a class="btn btn-primary" href="/Category/Create">Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">

    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>

            <td>@item.Description</td>

            <td>@Html.ActionLink("Sil","Delete" , new{item.Id}, new {@class="btn btn-danger ", onclick="return confirm ('Silmek istiyor musunuz?')"})</td>

            <td><a class="btn btn-primary" href="/Category/Update/@item.Id">Güncelle</a></td>
        </tr>
    }
</table>
